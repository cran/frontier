citHeader("To cite package 'frontier' in publications use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
vers <- paste("R package version", meta$Version)

citEntry(entry = "Manual",
   title = "frontier: Stochastic Frontier Analysis",
   author = personList(as.person("Tim Coelli"),
      as.person("Arne Henningsen")),
   year = year,
   note = vers,
   URL = "http://CRAN.R-Project.org/package=frontier",
   
   textVersion =
      paste0("Tim Coelli and Arne Henningsen (",
         year,
         "). frontier: Stochastic Frontier Analysis. ",
         vers, ". ",
         "http://CRAN.R-Project.org/package=frontier." ))
